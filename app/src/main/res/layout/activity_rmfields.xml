<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RMActivityFields"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/applaout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_below="@+id/applaout"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/fieldslyt"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:id="@+id/nurserynamelyt">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Nursery Name"
                            android:textSize="18dp"

                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/nurseryname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:inputType="textMultiLine"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Activity Name "
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/activityname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="Activity Name"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        android:paddingTop="10dp"

                        android:weightSum="1"
                        android:layout_marginTop="5dp"
                        android:id="@+id/nameactivity">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Name *"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/nameofactivity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="Name"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:paddingTop="10dp"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/rmdate"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:textSize="20dp"
                            android:inputType="date"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Date"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Type *"
                            android:textSize="18dp"
                            android:gravity="center_vertical"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <Spinner
                            android:id="@+id/typeSpinner"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:background="@drawable/spinner_bg"
                            android:layout_height="match_parent"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:id="@+id/labourslyt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Labour Man Days (Male)-Regular"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/mandaysmale"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:hint="Man Days -  Male"
                                android:inputType="numberDecimal"
                                android:maxLength="8"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Labour Man Days(Female)-Regular"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/mandaysfemale"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:textSize="20dp"
                                android:inputType="numberDecimal"
                                android:maxLength="8"
                                android:textAlignment="textStart"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:hint="Man Days - Female"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Labour Man Days (Male)-Outside"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/mandaysmaleoutside"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:hint="Man Days -  Male"
                                android:textAlignment="textStart"
                                android:inputType="numberDecimal"
                                android:maxLength="8"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Labour Man Days(Female)-Outside"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/mandaysfemaleoutside"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:textSize="20dp"
                                android:textAlignment="textStart"
                                android:inputType="numberDecimal"
                                android:maxLength="8"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:hint="Man Days - Female"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_layout"
                            android:orientation="vertical">

                            <TextView
                                style="@style/header_h1_text_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Comments *" />

                            <EditText
                                android:id="@+id/comments"
                                style="@style/editTxt_normal_address"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:digits="@string/digits"
                                android:gravity="start"
                                android:maxLength="150"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/otherslyt"
                       >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical"
                                android:text="Expense Type *"
                                android:textColor="@color/black"

                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/expensetype"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:hint="Expense Type"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="UOM "
                                android:textSize="18dp"
                                android:gravity="center_vertical"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <Spinner
                                android:id="@+id/uomspinner"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/spinner_bg"
                                android:layout_height="match_parent"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Quantity "
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />

                            <EditText
                                android:id="@+id/quantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:hint="Quantity"
                                android:gravity="center_vertical"
                                android:inputType="numberDecimal"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Cost (Rs) *"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/cost"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:hint=""
                                android:inputType="numberDecimal"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_layout"
                            android:orientation="vertical">

                            <TextView
                                style="@style/header_h1_text_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="18dp"
                                android:text="Comments *" />


                            <EditText
                                android:id="@+id/othercomments"
                                style="@style/editTxt_normal_address"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:digits="@string/digits"
                                android:gravity="start"
                                android:maxLength="150" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:weightSum="1">

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Upload Receipt *"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"

                                />

                            <ImageView
                                android:id="@+id/rmimageview"
                                android:layout_width="0dp"
                                android:layout_height="150dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_30dp"
                                android:elevation="4dp"
                                android:src="@drawable/addimage"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <Button
                            android:layout_margin="10dp"
                            android:id="@+id/rmsubmitBtn"
                            style="@style/basicBtnStyle"
                            android:layout_width="150dp"
                            android:textSize="18dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Save" />

                        <Button
                            android:layout_margin="10dp"
                            android:id="@+id/rmcancelBtn"
                            style="@style/basicBtnStyle"
                            android:layout_width="150dp"
                            android:textSize="18dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Close" />
                    </LinearLayout>

<!--                    <Button-->
<!--                        android:id="@+id/rmsubmitBtn"-->
<!--                        style="@style/basicBtnStyle"-->
<!--                        android:layout_width="250dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:layout_marginTop="20dp"-->
<!--                        android:text="Save" />-->

                </LinearLayout>


        </ScrollView>

    </LinearLayout>

</RelativeLayout>