<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/mainnlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="10dp">
            <View
                android:id="@+id/statusColorStrip"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@color/green" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- Consignment ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consignment Id"
                android:textColor="#666"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/consignmentcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                />



            <!-- Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Status"
                    android:layout_marginTop="12dp"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txtStatusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textSize="18sp"

                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"

                    android:layout_marginTop="12dp"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="12dp"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:gravity="start" />

            </LinearLayout>


            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:gravity="center_vertical">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Status"-->
            <!--                    android:textColor="#666"-->
            <!--                    android:textSize="12sp"-->
            <!--                    android:gravity="start"  />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/txtStatusTxtt"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Primary"-->
            <!--                    android:textSize="12sp"-->
            <!--                    android:layout_marginStart="8dp"-->
            <!--                    android:paddingHorizontal="8dp"-->
            <!--                    android:paddingVertical="2dp"-->
            <!--                    android:background="@drawable/bg_status_primary"-->
            <!--                    android:textColor="@android:color/holo_green_dark"-->
            <!--                    android:gravity="end" />-->
            <!--            </LinearLayout>-->

            <!-- Grid Info -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp">

                <!-- Origin Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origin Name"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/originname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Vendor Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendor Name"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/vendorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Variety Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variety Name"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/vareityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_tick_point"
                        />
                </LinearLayout>

                <!-- Estimated Quantity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Quantity"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/estimatedQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Ordered Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ordered Date"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/ordereddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>



                <!-- Arrival Date -->
                <LinearLayout
                    android:id="@+id/lytarrivaldate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival Date"
                        android:textColor="#666"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/arrivaldate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </GridLayout>

            <!-- Arrived Quantity -->
            <LinearLayout
                android:id="@+id/lytarrivedqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arrived Quantity"
                    android:layout_marginTop="12dp"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/arrivedqty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="start" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
